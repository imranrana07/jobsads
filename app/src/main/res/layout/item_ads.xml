<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/dp_10"
    app:cardElevation="@dimen/dp_5"
    app:cardCornerRadius="@dimen/dp_10">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCompanyLogo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvLastDate"
            tools:src="@drawable/ic_launcher_background"
            app:layout_constraintWidth_percent=".25"
            android:scaleType="fitXY"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCompanyName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivCompanyLogo"
            android:layout_marginTop="@dimen/dp_5"
            tools:text="SnS SolutionSnS Sns"
            android:layout_marginStart="@dimen/dp_10"
            android:textStyle="bold"
            android:textColor="@color/charcoal"
            android:singleLine="true"
            android:maxLines="1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvJobTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/ivCompanyLogo"
            app:layout_constraintTop_toBottomOf="@id/tvCompanyName"
            android:layout_marginTop="@dimen/dp_5"
            tools:text="Android Apps Developer"
            android:layout_marginStart="@dimen/dp_10"
            android:textStyle="bold"
            android:textColor="@color/charcoal"
            android:singleLine="true"
            android:maxLines="1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvJobExperience"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/ivCompanyLogo"
            app:layout_constraintTop_toBottomOf="@id/tvJobTitle"
            android:layout_marginTop="@dimen/dp_5"
            tools:text="Exp: 1~2 years"
            android:layout_marginStart="@dimen/dp_10"
            android:textStyle="bold"
            android:textColor="@color/charcoal"
            android:singleLine="true"
            android:maxLines="1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSalaryRange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/ivCompanyLogo"
            app:layout_constraintTop_toBottomOf="@id/tvJobExperience"
            android:layout_marginTop="@dimen/dp_5"
            tools:text="Salary: 60,000 - 65,000"
            android:layout_marginStart="@dimen/dp_10"
            android:textStyle="bold"
            android:textColor="@color/charcoal"
            android:singleLine="true"
            android:maxLines="1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLastDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/ivCompanyLogo"
            app:layout_constraintTop_toBottomOf="@id/tvSalaryRange"
            android:layout_marginTop="@dimen/dp_5"
            tools:text="Last date: 14th December 2020"
            android:layout_marginStart="@dimen/dp_10"
            android:textStyle="bold"
            android:textColor="@color/charcoal"
            android:singleLine="true"
            android:maxLines="1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvApplyInstruction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLastDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/dp_5"
            tools:text="Last date: 14th December 2020"
            android:textStyle="bold"
            android:textColor="@color/charcoal"
            android:layout_marginBottom="@dimen/dp_10"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>